
_SHELL="$(ps "${$}" | grep "${$} " | grep -v grep | sed -rn "s/.*[-\/]+(bash|z?sh) .*/\1/p")"; # bash || sh || zsh
case ${_SHELL} in
  zsh)
    _DIR="$( cd "$( dirname "${(%):-%N}" )" && pwd -P )"
    _0="$( basename "${(%):-%N}" )"
    _SCRIPT="${(%):-%N}"
    _BINARY="/bin/zsh"
    _PWD="$(pwd)"
    ;;
  sh)
    _DIR="$( cd "$( dirname "${0}" )" && pwd -P )"
    _0="$( basename "${0}" )"
    _SCRIPT="${0}"
    _BINARY="/bin/sh"
    _PWD="$(pwd)"
    ;;
  *)
    _DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P )"
    _0="$( basename "${BASH_SOURCE[0]}" )"
    _SCRIPT="${BASH_SOURCE[0]}"
    _BINARY="/bin/bash"
    _PWD="$(pwd)"
    ;;
esac

set -e

echo "${_0}: executing ~/.huskyrc _BINARY=${_BINARY}"

alias sshh="/bin/bash ~/sshh.sh"

if [ "${_BINARY}" = "/bin/zsh" ]; then

    source ~/.zshrc
fi

if [ "${_BINARY}" = "/bin/zsh" ]; then

    source ~/.bashrc
fi

if [ "${SSHH_DIR_WITH_KEYS}" = "" ]; then

    echo ".huskyrc error: SSHH_DIR_WITH_KEYS is not defined"
    exit 1
fi

if [ "${NVM_BIN}" = "" ]; then

    echo ".huskyrc error: NVM_BIN is not defined"
    exit 1
fi

/bin/bash ~/sshh.sh --auto

source ~/.nvm/nvm.sh

nvm use || true

export PATH="${PATH}:${NVM_BIN}"

echo "${_0}: finished ~/.huskyrc"
